<?xml version="1.0" encoding="UTF-8" ?>
<xddl>
  <!-- dot notation -->
  <start>
    <record name="A">
      <field name="first" length="8"/>
      <field name="second" length="8"/>
    </record>
    <if expr="A.first">
      <field name="x" length="8"/>
    </if>
    <if expr="A.second">
      <field name="y" length="8"/>
    </if>
  </start>
</xddl>
